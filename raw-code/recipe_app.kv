ScreenManager:
    LoginScreen:
    RegisterScreen:
    MainInterfaceScreen:

<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        canvas.before:
            Color:
                rgba: 0.15, 0.2, 0.3, 1  # Dark background for login screen
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Login to Recipe Organizer"
            font_size: 24
            color: 1, 1, 1, 1

        TextInput:
            id: username_input
            hint_text: "Username"
            multiline: False
            font_size: 18
            size_hint_y: None
            height: 50
            background_color: 0.8, 0.8, 0.9, 1  # Light background for input
            foreground_color: 0.1, 0.2, 0.3, 1  # Dark text color
            padding: [10, 10]
            hint_text_color: 0.5, 0.5, 0.7, 1  # Soft color for hint text

        TextInput:
            id: password_input
            hint_text: "Password"
            multiline: False
            font_size: 18
            size_hint_y: None
            height: 50
            background_color: 0.8, 0.8, 0.9, 1  # Light background for input
            foreground_color: 0.1, 0.2, 0.3, 1  # Dark text color
            password: True
            padding: [10, 10]
            hint_text_color: 0.5, 0.5, 0.7, 1  # Soft color for hint text

        Button:
            text: "Login"
            size_hint_y: None
            height: 50
            on_release: root.validate_login()

        Label:
            id: login_error
            text: ""
            font_size: 16
            color: 1, 0, 0, 1  # Red color for error message

        Button:
            text: "Create Account"
            size_hint_y: None
            height: 50
            on_release: root.go_to_register()

