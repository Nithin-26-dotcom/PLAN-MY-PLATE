<MainInterfaceScreen>:
    name: "main_interface"
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.1, 0.2, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Welcome to the Recipe Organizer Main Interface"
            font_size: 24
            color: 1, 1, 1, 1

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 20
            Button:
                text: "Add Recipe"
                on_release: app.root.current = "add_recipe"
            Button:
                text: "View Recipes"
                on_release: app.root.current = "view_recipes"
            Button:
                text: "Search Recipes"
                on_release: app.root.current = "search_recipes"
